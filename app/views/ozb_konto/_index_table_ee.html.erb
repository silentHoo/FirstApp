<!-- :ktoNr, :bankId, :kreditlimit,  :id, :bankKtoNr, :blz, :bic, :iban, :bankName -->
<table class="record_listing">
  <tr>
    <th><%= OzbKonto.human_attribute_name(:ktoNr) %></th>
    <th><%= OzbKonto.human_attribute_name(:bankId) %></th>
    <th><%= Bankverbindung.human_attribute_name(:bankKtoNr) %></th>
    <th><%= Bankverbindung.human_attribute_name(:blz) %></th>
    <th><%= Bankverbindung.human_attribute_name(:bankName) %></th>
    <th><%= OzbKonto.human_attribute_name(:kreditLimit) %></th>
    <th colspan="3">Optionen</td>
  </tr>
  
  <% if @ee_konten.nil? %>
	<tr>
	  <td colspan="9" class="record_listing_empty">Es sind noch keine EE-Konten vorhanden.</td>
	</tr>
  <% end %>
 
  <% if !@ee_konten.nil? %>
	  <% @ee_konten.each do |ee_konto| %>
	      <tr>
	        <td><%= ee_konto.ktoNr %></td>
	        <td><%= ee_konto.bankId %></td>
	      
	        <% bankverbindung = Bankverbindung.where(:id => ee_konto.bankId) %>
			<% if !bankverbindung.nil? && !bankverbindung.first.nil? then %>
				<% bankverbindung = bankverbindung.first%>
				<td><%= bankverbindung.bankKtoNr %></td>
				<td><%= bankverbindung.blz %></td>
				<td><%= bankverbindung.bankName %></td>
			<% end %>
			
			<td><%= ee_konto.kreditlimit %></td>
	      
		    <% kkl_verlauf_link = "/OZBPerson/" + params[:mnr] + "/OZBKonto/EE/" + ee_konto[:ktoNr].to_s + "/verlauf" %>
	        <td class="table_option_column"><%= link_to "editieren", "/OZBPerson/" + params[:mnr] + "/OZBKonto/EE/" + ee_konto.ktoNr.to_s + "/edit", :class => "edit_link" %></td>
	        <td class="table_option_column"><%= link_to "KKL-Verlauf", kkl_verlauf_link, :class => "konto_link" %></td>
	        <td class="table_option_column"><%= link_to "löschen", "/OZBPerson/" + params[:mnr] + "/OZBKonto/EE/" + ee_konto[:ktoNr].to_s + "/delete", :class => "delete_link", :data => { :confirm => "Soll das Konto " + ee_konto[:ktoNr].to_s + " wirklich gelöscht werden?" } %></td>
	      </tr>
	  <% end %>
  <% end %>
</table>

<br />

<table class="actions">
  <tr>
    <td><%= link_to "Neues EE-Konto hinzufügen", "/OZBPerson/" + params[:mnr] + "/OZBKonto/EE/new", :class => "submit_ok" %></td>
  </tr>
</table>